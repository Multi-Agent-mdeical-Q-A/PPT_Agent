TTS_BACKEND=piper

# 建议用相对 backend 的路径（补丁里会 join backend_dir）
PIPER_MODEL_PATH=models/voices/piperlow/zh_CN-huayan-x_low.onnx
PIPER_CONFIG_PATH=models/voices/piperlow/zh_CN-huayan-x_low.onnx.json
PIPER_MODEL_PATH_EN=models/voices/piperlow/en_US-lessac-low.onnx
PIPER_CONFIG_PATH_EN=models/voices/piperlow/en_US-lessac-low.onnx.json
# ✅ 让后端对外宣称并输出 16k（内部若模型非 16k，会自动重采样）
PIPER_TARGET_SAMPLE_RATE=16000

# 可选
PIPER_USE_CUDA=0
# 自动选择策略：前 120 字决定
TTS_AUTO_LANG=1
TTS_LANG_DECIDE_CHARS=120